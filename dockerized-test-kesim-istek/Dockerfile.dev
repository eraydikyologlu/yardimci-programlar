# Development için Python 3.11 imajı
FROM python:3.11

# Çalışma dizinini ayarla
WORKDIR /app

# Geliştirme araçlarını yükle
RUN apt-get update && apt-get install -y \
    git \
    curl \
    vim \
    htop \
    && rm -rf /var/lib/apt/lists/*

# Python geliştirme araçlarını yükle
RUN pip install --no-cache-dir \
    ipython \
    jupyter \
    black \
    flake8 \
    pytest \
    pytest-cov

# Bağımlılıkları kopyala ve yükle
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Geliştirme için volume mount kullanılacağı için dosyaları kopyalamıyoruz
# Çıktı dizinini oluştur
RUN mkdir -p /app/output

# Flask API için 7001 portunu expose et
EXPOSE 7001

# Geliştirme ortamı için bash'i varsayılan yap
# Flask uygulamasını çalıştırmak için: python test-kesim-istek-at.py
CMD ["/bin/bash"] 