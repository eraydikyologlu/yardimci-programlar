# Python 3.11 slim image kullan
FROM python:3.11-slim

# Çalışma dizinini ayarla
WORKDIR /app

# Sistem paketlerini güncelle ve gerekli paketleri yükle
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    unixodbc-dev \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Requirements dosyasını kopyala
COPY requirements.txt .

# Python paketlerini yükle
RUN pip install --no-cache-dir -r requirements.txt

# Development için volume mount kullanılacağı için dosyaları kopyalamıyoruz

# Port'u expose et
EXPOSE 7002

# Development modunda reload ile çalıştır
CMD ["uvicorn", "kazanim_update:app", "--host", "0.0.0.0", "--port", "7002", "--reload"] 